using System;

namespace Ass1
{
    class Program
    {
        static void Main(string[] args)
        {
            string word = "", reverse = "";
            Console.WriteLine("Enter a word to be reversed: ");

            word = Console.ReadLine();
            int size = (word.Length - 1);


            while(0 <= size)
            {
                reverse = reverse + word[size];
                size--;
            }

            Console.WriteLine(reverse);
            Console.ReadKey();
        }
    }
}
